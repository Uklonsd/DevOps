#!/bin/bash

# Перевірка наявності параметра
if [ -z "$1" ]; then
  echo "Будь ласка, вкажіть формат файлів (наприклад, *.txt, *.dev, *.pdf)"
  exit 1
fi

# Заданий формат файлів
file_format=$1

# Директорія призначення
dest_dir="/tmp/newdir"

# Створення директорії призначення, якщо вона не існує
mkdir -p "$dest_dir"

# Копіювання файлів
cp $file_format "$dest_dir"

# Підтвердження копіювання
echo "Файли формату $file_format скопійовано до $dest_dir"
